<div class="jumbotron text-center">
  <div class="container">
    <h1>{{contactHeader}}</h1>

    <div class="form-group form-group-lg justify-content-center">
      <div class="form-group col-xs-10 col-md-6 col-md-offset-3 {{emailSuccess}}">
        {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
      </div>
      <div class="form-group col-xs-10 col-md-6 col-md-offset-3 {{messageSuccess}}">
        {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=contactMessage}}
      </div>
      <div class="form-group col-xs-10 col-md-6 col-md-offset-3">
        <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'sendMessage'}}>Send Message</button>
      </div>
    </div>
    <div class="form-group col-xs-10 col-md-6 col-md-offset-3">
      {{#if responseMessage}}
        <div class="form-group alert alert-success">{{responseMessage}}</div>
      {{/if}}
    </div>

    <br/><br/>
  </div>
</div>