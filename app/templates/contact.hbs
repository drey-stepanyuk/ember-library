<div class="jumbotron text-center">
  <div class="container">
    <h1>{{model.contactHeader}}</h1>

    {{#if responseMessage}}
      <div class="form-group col-xs-10 col-md-6 col-md-offset-3">
          <div class="form-group alert alert-success">
              <h3>Thank you! Your message has been sent.</h3>
              <p>From: {{model.email}}</p>
              <p>Message: {{model.message}}</p>
              <p>Reference ID: {{model.id}}</p>
          </div>
      </div>

    {{else}}

      <div class="form-group form-group-lg justify-content-center">
        <div class="form-group col-xs-10 col-md-6 col-md-offset-3 {{model.emailSuccess}}">
          {{input type="email" value=model.email class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
        </div>
        <div class="form-group col-xs-10 col-md-6 col-md-offset-3 {{model.messageSuccess}}">
          {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=model.message}}
        </div>
        <div class="form-group col-xs-10 col-md-6 col-md-offset-3">
          <button class="btn btn-primary btn-lg btn-block" disabled={{model.isDisabled}} {{action 'sendMessage' model}}>Send Message</button>
        </div>
      </div>

    {{/if}}

  </div>
</div>
